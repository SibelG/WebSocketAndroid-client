<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment" android:background="@drawable/ani_design">


    <TextView
        android:text="Inohom+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        tools:ignore="MissingConstraints" android:textSize="34sp" android:textColor="#FBFBFB"
        android:id="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
        android:text="V.1.7.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        android:textColor="#020202" android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.506" android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"/>
    <Button
        android:text="Hesaplar"
        android:layout_width="219dp"
        android:layout_height="73dp" android:id="@+id/loginButton"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>